##############################################
# lseek 
##############################################

open f1.txt [O_RDWR;O_TRUNC] 0o666
Tau
RV_num(3)

write (FD 3) "0123456789" 10
Tau
RV_num(10)

lseek (FD 3) -3 SEEK_CUR
Tau
